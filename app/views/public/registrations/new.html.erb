<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <!-- Create some vertical space -->
    <div class="my-4"></div>

    <!-- 名前 -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :名前 %>
      </div>
      <div class="col-sm-9">
        <%= f.label :first_name, "（姓）" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= f.label :last_name, "（名）" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>

    <!-- フリガナ -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-sm-9">
        <%= f.label :（セイ） %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        <%= f.label :（メイ） %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    </div>

    <!-- メールアドレス -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <!-- 郵便番号 -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :郵便番号（ハイフンなし） %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    </div>

    <!-- 住所 -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :住所 %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :address, autofocus: true, autocomplete: "address"%>
      </div>
    </div>

    <!-- 電話番号 -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :電話番号（ハイフンなし） %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>
    </div>

    <!-- パスワード -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :パスワード（6文字以上） %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
      </div>
    </div>

    <!-- パスワード（確認用） -->
    <div class="row align-items-start">
      <div class="col-sm-3">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "password_confirm" %>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="actions row">
      <div class="col-sm-9 offset-sm-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>

    <!-- 既に登録済みの方 -->
    <div class="row">
      <div class="col-sm-12">
        <h3>既に登録済みの方</h3>
        <% if controller_name != 'sessions' %>
          <%= link_to "こちら", new_session_path(resource_name) %>
        <% end %>からログインしてください
      </div>
    </div>
  <% end %>
</div>

