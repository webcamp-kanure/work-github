<div class="container-lg mt-4">
  <div class="row pb-5">

    <div class="col-md-3">
      <%= render 'public/shared/left_sidebar', genres: @genres %>
    </div>

    <div class="col-lg-9">

      <h2>商品一覧<small>(全<%= @items.count %>件)</small></h2>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-3 p-2">
            <div class="text-center", style= "height: 150px;">
              <%= link_to item_path(item.id) do %>
                <%= image_tag(item.get_image, class: "img-fluid", style: "max-height: 150px; width: auto;") %></br>
              <% end %>
            </div>
            <p class="mt-3"><%= link_to item.name, item_path(item.id) %></p>
            <p>¥<%= p item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
      <ul class="pagination justify-content-center">
        <%= paginate @items %>
      </ul>
    </div>
  </div>
</div>