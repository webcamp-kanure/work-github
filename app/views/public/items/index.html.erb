<div class="row py-4">
  <div class="col-md-3">
    <%= render 'public/shared/left_sidebar', genres: @genres %>
  </div>
  <div class="col-md-9">
    <h3 class="px-3" style="background-color:#eee; width:fit-content;">
    <% if @genre_id == nil %>
      商品一覧<small>(全<%= @items_count %>件)</small>
    <% else %>
      <%= @genre.name %>一覧<small>(全<%= @items.count %>件)</small>
    <% end %>
    </h3>
    <div class="row mt-4">
      <% @items.each do |item| %>
        <div class="col-md-3 p-2">
          <div class="text-center", style= "height: 150px;">
            <%= link_to item_path(item.id) do %>
              <%= image_tag(item.get_image, class: "img-fluid", style: "max-height: 150px; width: auto;") %></br>
            <% end %>
          </div>
          <p class="mt-3"><%= link_to item.name, item_path(item.id) %></p>
          <p>¥<%= item.price.to_s(:delimited) %></p>
        </div>
      <% end %>
    </div>
    <ul class="pagination justify-content-center mt-4">
      <%= paginate @items %>
    </ul>
  </div>
</div>

