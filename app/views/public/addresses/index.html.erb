<div class="row mt-4">
  <div class="col-lg-11 offset-lg-1 pl-4">
    <h4 class="px-3" style="background-color:#eee; text-align:center; width:fit-content;">配送先登録/一覧</h4>
  </div>
</div>

<%= form_for @address, url: addresses_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: @address %>

  <!-- 余白 -->
  <div class="my-4"></div>

  <!-- 郵便番号 -->
  <div class="row">
    <div class="col-lg-3 pl-5 mb-2">
      <%= f.label :'郵便番号（ハイフンなし）' %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <!-- 住所 -->
  <div class="row">
    <div class="col-lg-3 pl-5 mb-2">
      <%= f.label :住所 %>
    </div>
    <div class="col-lg-6">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60"%>
    </div>
  </div>

  <!-- 宛名 -->
  <div class="row">
    <div class="col-lg-3 pl-5 mb-2">
      <%= f.label :宛名 %>
    </div>
    <div class="col-lg-5">
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col-lg-2">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<!-- 余白 -->
<div class="my-5"></div>

<div class="row">
  <div class="col-lg-8">
    <table class="table table-bordered">
      <tr class="table-active">
        <th class="bg-gray-light" style="width:10%">郵便番号</th>
        <th class="bg-gray-light" style="width:43.25%">住所</th>
        <th class="bg-gray-light" style="width:20%">宛名</th>
        <th class="bg-gray-light" style="width:30%"></th>
      </tr>
      <% @addresses.each do |shipping_address| %>
        <tr>
          <td><%= shipping_address.postal_code %></td>
          <td><%= shipping_address.address %></td>
          <td><%= shipping_address.name %></td>
          <td class="btn-group btn-group-sm">
            <%= link_to "編集する", edit_address_path(shipping_address.id), class: "btn btn-success" %>　<%= link_to "削除する", address_path(shipping_address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<!-- 余白 -->
<div class="my-5 py-2"></div>
