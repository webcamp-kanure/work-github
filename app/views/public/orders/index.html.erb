<div class="container mt-4" style="padding-bottom:125px;">
  <div class="row" style="margin:45px auto">
    <div class="col-lg-10 offset-lg-2">
      <h4 style="background-color:#ddd; text-align:center; width:180px;">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered pl-1">
        <thead>
          <tr class="table-active border-dark">
            <th class="border-dark" style="width:13%;">注文日</th>
            <th class="border-dark" style="width:40%;">配送先</th>
            <th class="border-dark" style="width:13%;">注文商品</th>
            <th class="border-dark" style="width:9%;">支払金額</th>
            <th class="border-dark" style="width:12%;">ステータス</th>
            <th class="border-dark" style="width:12%;">注文詳細</th>
          </tr>
        </thead>
        <tbody style="padding:0;">
          <% @orders.each do |order| %>
            <tr style="height:60px; padding:0;">
              <td class="align-middle border-dark py-1"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle border-dark py-1">
                <span style="line-height:20px;">
                  〒<%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.name %>
                </span>
              </td>
              <td class="align-middle border-dark">
                <% OrderDetail.where(order_id: order.id).each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td class="align-middle border-dark"><%= order.total_payment.to_s(:delimited) %>円</td>
              <td class="align-middle border-dark"><%= order.status %></td>
              <td class="align-middle border-dark text-center">
                <div class="btn-group btn-group">
                  <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
