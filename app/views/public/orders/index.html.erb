<div class="container mt-4" style="padding-bottom:125px;">
  <div class="row" style="margin:45px auto 80px">
    <div class="col-lg-10 offset-lg-2">
      <h4 style="background-color:#eee; text-align:center; width:180px;">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-11 offset-lg-1">
      <table class="table table-bordered" style="padding:0;">
        <thead>
          <tr class="table-active">
            <th class="bg-gray-light" style="width:15%;">注文日</th>
            <th class="bg-gray-light" style="width:50%;">配送先</th>
            <th class="bg-gray-light" style="width:15%;">注文商品</th>
            <th class="bg-gray-light" style="width:9%;">支払金額</th>
            <th class="bg-gray-light" style="width:11%;">注文詳細</th>
          </tr>
        </thead>
        <tbody style="padding:0;">
          <% @orders.each do |order| %>
            <tr style="height:60px; padding:0;">
              <td class="text-left align-middle" style="padding:5px 0;"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="text-left align-middle" style="padding:5px 0;">
                <span style="line-height:20px;">
                  〒<%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.name %>
                </span>
              </td>
              <td class="text-left align-middle" style="padding:5px 0;">
                <% OrderDetail.where(order_id: order.id).each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td class="text-left align-middle" style="padding:5px 0;"><%= order.total_payment %></td>
              <td class="text-center align-middle" style="padding:5px 0;">
                <div class="btn-group btn-group-sm">
                  <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>