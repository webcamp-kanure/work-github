<div class="container mt-4">
  <div class="row">
    <div class="col-lg-12">
      <h2>マイページ</h2>
    </div>
  </div>
  
 <div class="col-lg-6">
    <div class="col-lg-12">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">登録情報</h2>
        <%= link_to "編集する", customers_information_edit_path(@customer), class: "btn btn-primary justify-content-start" %>
      </div>
      
      
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>氏名</th>
              <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
    </div>
      
   
      <div class="col-lg-12">
        <div class="d-flex justify-content-between align-items-center">
          <h2 class="mb-0">注文履歴</h2>
          <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
        </div>
      </div>
 </div>
</div>
