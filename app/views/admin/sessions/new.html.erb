<div class="row pb-5">
  <div class="col-sm-10 offset-sm-2">
    <h4 style="background-color:#eee; text-align:center; width:180px;">管理者ログイン</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row py-2">
    <div class="col-sm-2 offset-sm-3">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-100" %>
    </div>
  </div>

  <div class="row py-2">
    <div class="col-sm-2 offset-sm-3">
      <%= f.label "パスワード" %>
    </div>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "current-password",class: "w-100" %>
    </div>
  </div>

  <div class="row pt-3">
    <div class="col text-center">
      <%= f.submit "ログイン", class:"btn btn-primary px-5 mt-3 mb-5" %>
    </div>
  </div>
<% end %>


