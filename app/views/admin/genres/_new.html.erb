 <!-- ジャンル新規登録 -->
  <div class="row mt-4">
    <div class="col-lg-12">
      <%= form_with(model: [:admin, @genre], local: true) do |form| %>
        <div class="d-flex align-items-center">
          <div class="mr-3">
            <%= form.label :name, 'ジャンル名' %>
          </div>
          <div class="mr-3">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div>
            <%= form.submit '新規登録', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>