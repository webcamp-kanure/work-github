<div class="container mt-4">
  <div class="container mt-4">
  <div class="row">
    <div class="col-lg-9">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

  <!-- ジャンル一覧 -->
  <div class="row mt-4">
    <div class="col-lg-12">
      <h4>ジャンル一覧</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th> <!-- 編集リンクのための空のヘッダ -->
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-info btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  
</div>