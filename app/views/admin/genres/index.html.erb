<div class="container mt-4">
  <div class="container mt-4">
  <div class="row">
    <div class="col-lg-9">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

 <!-- ジャンル新規登録 -->
  <div class="row mt-4">
    <div class="col-lg-12">
      <%= form_with(model: [:admin, @genre], local: true) do |form| %>
        <div class="d-flex align-items-center">
          <div class="mr-3">
            <%= form.label :name, 'ジャンル名' %>
          </div>
          <div class="mr-3">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div>
            <%= form.submit '新規登録', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- ジャンル一覧 -->
  <div class="row mt-4">
    <div class="col-lg-12">

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th> <!-- 編集リンクのための空のヘッダ -->
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-info btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  
</div>