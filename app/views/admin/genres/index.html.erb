<div class="row">
  <div class="col-lg-9">
    <h3>ジャンル一覧・追加</h3>
  </div>
</div>

<!-- ジャンル新規登録 -->
<div class="row mt-4">
  
    <%= form_with(model: [:admin, @genre], local: true) do |form| %>
    <div class="col-lg-12">
      <div class="d-flex align-items-center">
        <div class="mr-3">
          <%= form.label :name, 'ジャンル名' %>
        </div>
        <div class="mr-3">
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div>
          <%= form.submit '新規登録', class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    <% end %>
  
</div>

<!-- ジャンル一覧 -->
<div class="row mt-4">
  <div class="col-md-4">
    <table class="table">
      <thead class="table-active">
        <tr>
          <th class="text-center">ジャンル</th>
          <th></th> <!-- 編集リンクのための空のヘッダ -->
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-right"><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
