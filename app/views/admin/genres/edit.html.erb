<div class="container mt-4 pb-5">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="px-3" style="background-color:#eee; width:fit-content;">ジャンル編集</h2>
      <div class="row mt-4">
        <div class="col-lg-12">
          <%= form_with(model: [:admin, @genre], local: true, method: :patch) do |form| %>
            <div class="d-flex align-items-center">
              <div class="mr-3">
                <%= form.label :name, 'ジャンル名' %>
              </div>
              <div class="mr-3">
                <%= form.text_field :name, class: 'form-control' %>
              </div>
              <div>
                <%= form.submit '変更を保存', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
