<div class="row m-0 p-0 mb-3">
  <h2 class="px-4">ジャンル編集</h2>
</div>


<div class="row mt-4">
  <%= form_with(model: [:admin, @genre], local: true, method: :patch) do |form| %>
    <div class="col-lg-12">
      <div class="d-flex align-items-center">
        <div class="mr-3">
          <%= form.label :name, 'ジャンル名' %>
        </div>
        <div class="mr-3">
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div>
          <%= form.submit '変更を保存', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>