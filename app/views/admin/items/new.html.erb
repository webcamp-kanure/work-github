<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6">
      <h2>商品新規登録</h2>
    </div>
  </div>

  <div class="my-4"></div> <!-- 余白を作成 -->

  <div class="row">
    <div class="col-lg-6">
      <%= form_with model: @item_image, class: "my-form" do |f| %>
        <div class="form-group row">
          <%= f.label :image, "商品画像", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.file_field :image %>
          </div>
        </div>
        
        <!-- 商品名の入力フィールド -->
        <div class="form-group row">
          <%= f.label :name, "商品名", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
          </div>
        </div>
        
        <!-- 商品説明の入力フィールド -->
        <div class="form-group row">
          <%= f.label :description, "商品説明", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control", placeholder: "ここに説明文を記述します" %>
          </div>
        </div>
        
        <!-- 税抜価格の入力フィールド -->
        <div class="form-group row">
          <%= f.label :price_excluding_tax, "税抜価格", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <div class="input-group">
              <%= f.number_field :price_excluding_tax, class: "form-control", placeholder: "1000" %>
              <div class="input-group-append">
                <span>円</span>
              </div>
            </div>
          </div>
        </div>
        
        <%= f.submit "保存", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
