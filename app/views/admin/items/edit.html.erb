<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <h3 class="px-3" style="background-color:#eee; text-align:center; width:fit-content;">商品編集</h3>
  </div>
</div>

<div class="my-4"></div> <!-- 余白を作成 -->

<%= form_with model: @item, url: admin_item_path(@item), method: :patch, multipart: true do |f| %>
  <!-- 商品情報の入力フォーム -->
  <div class="row">
    <div class="col-lg-1 offset-lg-3">
      <%= f.label :image, "商品画像" %>
    </div>
    <div class="col-lg-4 offset-lg-1">
      <%= f.file_field :image %>
    </div>
  </div>

  <!-- 商品名の入力フィールド -->
  <div class="row mt-3">
    <div class="col-lg-1 offset-lg-3">
      <%= f.label :name, "商品名" %>
    </div>
    <div class="col-lg-4 offset-lg-1">
      <%= f.text_field :name, placeholder: "商品名" %>
    </div>
  </div>

  <!-- 商品説明の入力フィールド -->
  <div class="row mt-3">
    <div class="col-lg-1 offset-lg-3">
      <%= f.label :introduction, "商品説明" %>
    </div>
    <div class="col-lg-4 offset-lg-1">
      <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します", rows: 5 %>
    </div>
  </div>

  <!-- ジャンルの選択 -->
  <div class="row mt-3">
    <div class="col-lg-1 offset-lg-3">
      <%= f.label :genre_id, "ジャンル" %>
    </div>
    <div class="col-lg-4 offset-lg-1">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "--選択してください--" }, class: "form-control" %>
    </div>
  </div>

  <!-- 税抜価格の入力フィールド -->
  <div class="row mt-3">
    <div class="col-lg-1 offset-lg-3">
      <%= f.label :price, "税抜価格" %>
    </div>
    <div class="col-lg-4 offset-lg-1">
      <div class="input-group">
        <%= f.text_field :price, class: "form-control" %>
        <div class="input-group-append">
          <span>円</span>
        </div>
      </div>
    </div>
  </div>

  <!-- 販売ステータスの選択 -->
  <div class="row mt-3">
    <div class="col-lg-2 offset-lg-3">
      <%= f.label :is_active, "販売ステータス" %>
    </div>
    <div class="col-lg-4">
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_active, true, id: "active", class: "form-check-input" %>
        <%= f.label :is_active_true, "販売中", class: "form-check-label", for: "active" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_active, false, id: "inactive", class: "form-check-input" %>
        <%= f.label :is_active_false, "販売停止中", class: "form-check-label", for: "inactive" %>
      </div>
    </div>
  </div>

  <!-- 新規登録ボタン -->
  <div class="text-center mt-2">
    <%= f.submit "変更を保存", class: "btn btn-primary btn-lg", style: "background-color: green; margin-top: 10px;" %>
  </div>
<% end %>

<div class="my-5"></div>